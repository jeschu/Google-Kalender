{
  "name": "info.maila.google-calendar",
  "version": "1.0.0",
  "description": "",
  "productName": "Google Kalender",
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "run": "open -n 'out/Google Kalender-darwin-x64/Google Kalender.app'",
    "clean": "rm -rf out",
    "install": "npm run clean; npm run make; mv 'out/Google Kalender-darwin-x64/Google Kalender.app' /Applications/"
  },
  "keywords": [],
  "author": "Jens Schumacher <jeschu@ok.de>",
  "license": "ISC",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "electron": "^10.1.5"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "electron-window-state": "5.0.3"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "logo.icns"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "threema"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
